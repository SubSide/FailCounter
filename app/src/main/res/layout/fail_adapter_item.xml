<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <TextView
        android:id="@+id/who"
        android:textColor="@color/fail_who"
        android:textSize="@dimen/overview_who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Test"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/reason"
        android:textColor="@color/fail_reason"
        android:textSize="@dimen/overview_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Test"
        app:layout_constraintTop_toBottomOf="@id/who"/>
    <TextView
        android:id="@+id/when"
        android:textColor="@color/fail_reason"
        android:textSize="@dimen/overview_when"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="01-01-1970 00:00"
        app:layout_constraintTop_toBottomOf="@id/reason"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>